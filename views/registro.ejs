  <body>
    <header>
      <div class="navbar">
        <div class="container">
          <a class="logo" href="#">Explore<span>SE</span></a>

          <img
            id="mobile-cta"
            class="mobile-menu"
            src="/img/menu.svg"
            alt="menu"
          />

          <nav>
            <img
              id="mobile-exit"
              class="mobile-menu-exit"
